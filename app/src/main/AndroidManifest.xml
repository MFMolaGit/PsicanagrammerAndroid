<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="psicanagrammer.gevapps.com.psicanagrammer" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainMenuActivity"
            android:label="@string/title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Psicanagram"
            android:label="@string/title" >
        </activity>
        <activity
            android:name=".ui.AnagrammerActivity"
            android:label="@string/title_activity_anagrammer" >
        </activity>
        <activity
            android:name=".ui.InstructionsActivity"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name=".ui.QuestionsActivity"
            android:label="@string/title_activity_questions" >
        </activity>
        <activity
            android:name=".ui.ConsultorReviewsActivity"
            android:label="@string/title_activity_consultor_reviews" >
        </activity>
        <activity
            android:name=".ui.ReviewActivity"
            android:label="@string/title_activity_review" >
        </activity>
    </application>

</manifest>
